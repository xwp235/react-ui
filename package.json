{
  "name": "react-ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist",
    "lib"
  ],
  "main": "dist/es/react-ui.es.js",
  "module": "dist/es/react-ui.es.js",
  "unpkg": "dist/umd/react-ui.umd.js",
  "types": "dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-ui.es.js",
      "require": "./dist/react-ui.umd.js"
    },
    "./style.css": "./dist/react-ui.min.css"
  },
  "scripts": {
    "lint": "eslint .",
    "build-es": "tsc -p tsconfig.json && vite build --config vite.config.es.ts",
    "build-umd": "tsc -p tsconfig.json && vite build --config vite.config.umd.ts",
    "build-css": "vite build --config vite.config.css.ts",
    "build": "pnpm build-es && pnpm build-umd && pnpm build-css"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "sass": "^1.89.1",
    "shx": "^0.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  }
}
